<%- include('../partials/header') %>
<div class="container container-wrapper">
    <div class="row">

        <div class="container container-wrapper col-11 col-sm-11 col-md-9 col-lg-7 order-last">
            <% if (clucks) {
    for (let cluck of clucks) { %>
            <div class="row mb-3">
                <div class="card w-100 p-2">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-2">
                                <img src="<%= cluck.image_url %>" class="w-100" alt="">
                            </div>
                            <div class="cluck col-10">
                                <div class="cluck-info"><span class="text-primary"><%= cluck.username %></span> • <span
                                        class="text-muted"><%= cluck.readableDate %></span></div>
                                <div class="cluck-content mt-3"><%= cluck.content %></div>
                                <!-- if there is any photo in the cluck, img goese in below -->
                                <img src="<%= cluck.image_url %>" class="w-75" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } } %>
        </div>

        <div class="container container-wrapper d-none d-lg-block col order-first">
            <div class="card w-100 p-1">
                <div class="card-body">
                    <h5 class="text-left">Trending Tags</h5>

                    <!-- Tags comes here -->
                    <div class="">
                        <% for (let hashtag of hashtags) {%>
                        <h6>#<%= hashtag.tag_name %> • <%= hashtag.count %></h6>
                        <%}%>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
